<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="0dp"
    tools:context="chatapp.com.chatapp.SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_bar_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/default_avatar"
        android:layout_marginTop="27dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/settings_image_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings_change_status_btn"
        android:layout_marginBottom="22dp"
        android:text="@string/change_image"
        android:layout_alignLeft="@+id/chat_bar_image"
        android:layout_alignStart="@+id/chat_bar_image"
        android:layout_alignRight="@+id/chat_bar_image"
        android:layout_alignEnd="@+id/chat_bar_image" />

    <Button
        android:id="@+id/settings_change_status_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_status"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_alignLeft="@+id/settings_image_btn"
        android:layout_alignStart="@+id/settings_image_btn"
        android:layout_alignRight="@+id/settings_image_btn"
        android:layout_alignEnd="@+id/settings_image_btn" />


    <TextView
        android:id="@+id/settings_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings_image_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:text="@string/default_status" />

    <TextView
        android:id="@+id/settings_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_bar_image"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Display Name" />


</RelativeLayout>
